= page_title '角色管理'
.wrap
  .panel.panel-default
    .panel-body
      = form_tag admin_roles_path, id: 'form-role', class: 'form-inline', role: 'form', method: :post do
        .form-group
          = text_field_tag 'role[code]', nil, placeholder: '输入角色代码', class: 'form-control input-sm'
          = text_field_tag 'role[name]', nil, placeholder: '输入角色名称', class: 'form-control input-sm'
          = text_field_tag 'role[description]', nil, placeholder: '输入角色描述', class: 'form-control input-sm'
          = submit_tag '确定', class: 'btn btn-primary btn-sm'

  .table-responsive
    table.table.table-hover
      thead
        tr
          th 角色代码
          th 角色名称
          th 角色描述
          th 操作
      tbody
        - @roles.each do |role|
          tr
            td = role.code
            td = role.name
            td = role.description
            td
              = link_to admin_role_path(role) do
                i.fas.fa-info-circle
                | 查看
              = link_to edit_admin_role_path(role) do
                i.fas.fa-edit
                | 编辑
              = link_to admin_role_path(role), method: :delete, data: {confirm: '确定删除吗？'} do
                i.fas.fa-trash-alt
                | 删除