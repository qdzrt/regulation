<%= content_for(:title) {'用户管理'}%>
<div class="row common-content">
  <div class="table-responsive">
    <table class="table table-hover table-users">
      <thead>
        <tr>
          <th>姓名</th>
          <th>邮箱</th>
          <th>状态</th>
          <!--<th>images</th>-->
          <!--<th>documents</th>-->
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user_status(user.active) %></td>
            <td>
              <%= link_to admin_user_path(user) do %>
                <i class="fas fa-info-circle"></i>查看
              <% end %>
              <%= link_to edit_admin_user_path(user) do %>
                <i class="fas fa-edit"></i>编辑
              <% end %>
              <%= link_to admin_user_path(user), method: :delete, data: {confirm: '确定删除吗？'} do %>
                <i class="fas fa-trash-alt"></i>删除
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to 'new user', new_admin_user_path %>
  <%= link_to 'users', admin_users_path %>
</div>
